
<h1>Friends List</h1>

<table class="table table-striped table-bordered table-hover">
   <thead class="thead-dark">
    <tr>

      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Email</th>
      <th scope="col">Phone</th>
      <th scope="col">Twitter</th>
      <th scope="col">User ID</th>
      <th colspan="3"></th>
      
    </tr>
  </thead>
  <tbody>
    <% @friends.each do |friend| %>
      <tr>
      
        <td><%= friend.first_name %></td> <!-- ใส่ข้อมูล first_name ของเพื่อนลงในคอลัมน์ First -->
        <td><%= friend.last_name %></td> <!-- ใส่ข้อมูล last_name ของเพื่อนลงในคอลัมน์ Last -->
        <td><%= friend.email %></td> <!-- ใส่ข้อมูล last_name ของเพื่อนลงในคอลัมน์ Last -->
        <td><%= friend.phone %></td> <!-- ใส่ข้อมูล last_name ของเพื่อนลงในคอลัมน์ Last -->
        <td><%= friend.twitter %></td> <!-- ใส่ข้อมูล last_name ของเพื่อนลงในคอลัมน์ Last -->
        <td><%= friend.user_id %></td>
        <td>
          <%= link_to "Show", friend %>
        </td>

        <td>
          <%= link_to "Edit", friend %>
        </td>
        <td>
          <%= link_to "Destroy", friend %>
        </td>

      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New friend", new_friend_path, class:"btn btn-secondary" %>

